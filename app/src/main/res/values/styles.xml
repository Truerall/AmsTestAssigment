<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!--<item name="android:textViewStyle">@style/TextViewDefault</item>-->

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewStateHeader" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewDetailItemLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewDetailItemData" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
