<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_info"
            android:layout_marginTop="@dimen/padding_8dp"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            card_view:contentPadding="@dimen/padding_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_avatar"
                    android:layout_weight="4"
                    android:src="@drawable/vh_avatar_large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/dp_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/item_detail_pair"/>
                    <include
                        android:id="@+id/dp_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/item_detail_pair"/>
                    <include
                        android:id="@+id/dp_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/item_detail_pair"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_main"
            android:layout_marginTop="@dimen/padding_8dp"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:layout_below="@id/cv_main_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_detail_pair"/>


        <include layout="@layout/state_layout"/>

    </RelativeLayout>

</LinearLayout>
